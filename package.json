{
  "name": "stock-manager",
  "version": "1.0.0",
  "description": "Sistema de gestión de inventario y ventas",
  "main": "electron/main.js",
  "author": {
    "name": "InnoDev69",
    "email": "yamirnu14@proton.me"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:server": "pyinstaller build/build.spec",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux AppImage deb pacman"
  },
  "build": {
    "appId": "com.stockmanager.app",
    "productName": "Stock Manager",
    "files": [
      "electron/**/*",
      "static/**/*",
      "!build",
      "!**/*.pyc",
      "!dist/stock-manager-server",
      "!.github"
    ],
    "extraResources": [
      {
        "from": "dist/stock-manager-server",
        "to": "server/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "static/icon.ico",
      "publisherName": "InnoDev69"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "category": "Office",
      "icon": "static/icon.png",
      "artifactName": "${name}-${version}.${ext}",
      "maintainer": "InnoDev69 yamirnu14@proton.me",
      "desktop": {
        "Name": "Stock Manager",
        "GenericName": "Inventory Management",
        "Comment": "Gestión de inventario y ventas",
        "Categories": "Office;Finance;"
      }
    },
    "pacman": {
      "depends": [
        "glibc",
        "gtk3",
        "nss"
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "find-free-port": "^2.0.0"
  }
}