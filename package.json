{
  "name": "stock-manager",
  "version": "1.0.0",
  "description": "Sistema de gestión de inventario y ventas",
  "main": "electron/main.js",
  "author": {
    "name": "InnoDev69",
    "email": "yamirnu14@proton.me"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "clean:electron": "rm -rf dist/linux-unpacked dist/win-unpacked dist/*.AppImage dist/*.deb dist/*.pacman dist/*.exe dist/*.blockmap 2>/dev/null || true",
    "build:server": "pyinstaller build.spec",
    "build:win": "npm run clean:electron && electron-builder --win --x64",
    "build:linux": "npm run clean:electron && electron-builder --linux"
  },
  "build": {
    "appId": "com.stockmanager.app",
    "productName": "Stock Manager",
    "files": [
      "electron/**/*",
      "static/**/*",
      "!build.spec",
      "!**/*.pyc",
      "!dist/stock-manager-server*",
      "!.github"
    ],
    "extraResources": [
      {
        "from": "dist/stock-manager-server",
        "to": "server/stock-manager-server",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "static/icon.ico",
      "publisherName": "InnoDev69",
      "extraResources": [
        {
          "from": "dist/stock-manager-server.exe",
          "to": "server/stock-manager-server.exe"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Office",
      "icon": "static/icon.png",
      "artifactName": "${name}-${version}.${ext}",
      "maintainer": "InnoDev69 <yamirnu14@proton.me>",
      "desktop": {
        "Name": "Stock Manager",
        "GenericName": "Inventory Management",
        "Comment": "Gestión de inventario y ventas",
        "Categories": "Office;Finance;"
      }
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "find-free-port": "^2.0.0"
  }
}